<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>


  <!-- Right Navigation -->
  <div class="fa navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <%= link_to invoices_path, class: 'navbar-wagon-item navbar-wagon-link' do %> Gestion du Parc
      <% end  %>
      <%= link_to contrats_path, class: 'navbar-wagon-item navbar-wagon-link' do %> Générer un contrat de travail
      <% end  %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item ">
        <div class="dropdown">
        <a data-toggle='dropdown' id='navbar-wagon-menu' class='fa-bars navbar-wagon-item navbar-wagon-link dropdown-toggle'></a>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->

  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <% if user_signed_in? %>
            <%= link_to invoices_path do %> Factures
            <% end  %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                      <% end %>
          </li>
        <% else %>
           <li><%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

