<div class="logbox">
            <%= simple_form_for(@invoice) do |f| %>
            <div class="form-inputs">
              <%= f.input :entite, required: false, autofocus: true %>
                           <%= f.input :specifique_id %>
              <%= f.input :fournisseur %>
              <%= f.input :marque %>
              <%= f.input :nom %>
              <%= f.input :description %>
              <%= f.input :serial %>
              <%= f.input :value %>
              <%= f.input :duree_garantie %>
              <%= f.input :emplacement %>
              <%= f.input :date_achat, as: :date, html5: true %>
              <%= f.input :fin_amortissement, as: :date, html5: true %>
              <%= f.input :numero_comptabilite %>
              <%= f.input :processeur %>
              <%= f.input :RAM %>
              <%= f.input :memoire %>
              <%= f.input :systeme_exploitation %>
              <%= f.input :numero_OS %>
              <%= f.input :photo, as: :attachinary %>

            </div>

            <div class="form-actions">
              <%= f.button :submit, "Send" %>
            </div>
        <% end %>
</div>

